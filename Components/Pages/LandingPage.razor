@page "/"
@using Clubify.Components.Layout
@layout LandingLayout

@inject NavigationManager NavigationManager

<LandingNav />

<section class="hero">
    <div class="hero-container">
        <div class="hero-text">
            <h1>Empower your club management</h1>
            <p>
                Say goodbye to complicated Excel sheets and endless paperwork. Clubify makes it easy for clubs of all sizes to manage members, events, and payments in one simple place. Focus on growing your community while we handle the admin.
            </p>
            <div class="hero-buttons">
                <a href="#" class="btn-primary">Get started</a>
                <a href="#" class="btn-secondary">See pricing</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="images/clubify-dashboard.png" alt="Clubify Dashboard" />
        </div>
    </div>
    <div class="hero-bottom-shape">
        <svg viewBox="0 0 1440 100" preserveAspectRatio="none">
            <path d="M0,0 C480,100 960,0 1440,100 L1440,100 L0,100 Z" fill="#FFFBF4"></path>
        </svg>
    </div>
</section>

<section class="scale-section">
    <div class="scale-container">
        <!-- Left Side: Text -->
        <div class="scale-text">
            <h5>Scale up</h5>
            <h2>Grow your club with confidence</h2>
            <p>
                Whether you’re running a local club or managing a big community, Clubify helps you stay organized as you grow. Easily keep track of members, payments, and events without the stress of spreadsheets. With Clubify, you’ll have the tools you need to scale smoothly and focus on what matters most — your club and its members.
            </p>
        </div>

        <!-- Right Side: Image -->
        <div class="scale-images">
            <div class="image-wrapper image-left">
                <img src="images/youth-football-huddle.jpg" alt="Youth community football club" />
            </div>
            <div class="image-wrapper image-right">
                <img src="images/community-club-group.jpg" alt="Local community club members chatting" />
            </div>
        </div>
    </div>
    <div class="scale-bottom-shape">
        <svg viewBox="0 0 1440 100" preserveAspectRatio="none">
            <path d="M0,0 C360,100 1080,0 1440,100 L1440,100 L0,100 Z" fill="#0c0c0c"></path>
        </svg>
    </div>
</section>

